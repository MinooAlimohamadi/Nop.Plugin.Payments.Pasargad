@model Nop.Plugin.Payments.Pasargad.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

@inject Nop.Core.IWebHelper webHelper
<div class="form-horizontal">
    <form asp-controller="PasargadPayment" asp-action="Configure" method="post">
        <div class="cards-group">
            <div class="card card-default">
                <div class="card-body">
                    <div class="card-header with-border clearfix">
                        <div class="card-title">
                            <i class="fa fa-info"></i>@T("Plugins.Payments.Pasargad.ConfigureName")
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="PrivateKey" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="PrivateKey" />
                                <span asp-validation-for="PrivateKey"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="TerminalCode" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="TerminalCode" />
                                <span asp-validation-for="TerminalCode"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-label asp-for="MerchantCode" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="MerchantCode" />
                                <span asp-validation-for="MerchantCode"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-9 col-md-offset-3">
                                <input type="submit" name="save" class="btn bg-primary" value="@T("Admin.Common.Save")" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>